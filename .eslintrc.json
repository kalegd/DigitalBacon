{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 80,
        "comments": 80,
        "ignoreUrls": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "indent": ["error", 4, { "ignoreComments": true }],
    "semi": ["error", "always"],
    "arrow-body-style": ["error", "as-needed"],
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ]
  }
}
